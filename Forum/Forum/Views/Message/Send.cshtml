@model Forum.ViewModels.MessageSendViewModel

@using Forum.Models

@{
    ViewBag.Title = "New message";
}

<h2>New message</h2>

<div class="login-wrap form-horizontal">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.To, new { @class = "col-md-3" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.To, Model.Users, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.To)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "col-md-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Body, new { @class = "col-md-3" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Body)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" class="btn btn-block btn-success" value="Send" />
            </div>
        </div>
    }
</div>



