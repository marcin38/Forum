@model Forum.ViewModels.UserLoginViewModel

@{
    ViewBag.Title = "Sign in";
}

<h2>Sign in</h2>

<div class="login-wrap form-horizontal">
    @using (Html.BeginForm(MVC.User.Login((string) ViewBag.ReturnUrl), FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

    <div class="col-md-10">
        @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
    </div>
        
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" class="btn btn-block btn-success" value="Sign in" />
            </div>
        </div>
        }
    </div>



