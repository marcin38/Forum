@model IEnumerable<Domain.Models.Category>

<p>
    @Html.ActionLink("Create New", "Create", "Category")
</p>

<table class="my-table">
    <tr>
        <td class="td1">
            Category name
        </td>
        <td class="td1">
            Description
        </td>
        <td class="td1">
            Action
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="td1">
                @Html.DisplayFor(m => item.Name)
            </td>
            <td class="td1">
                @Html.DisplayFor(m => item.Description)
            </td>
            <td class="td1">
                
                @Html.ActionLink("Edit", MVC.Category.Edit(item.Id))
                @Html.ActionLink("Delete", MVC.Category.Delete(item.Id))
            </td>
        </tr>
    }

</table>

