@model Domain.Models.Category

<div class="login-wrap form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" class="btn btn-block btn-success" value="Submit" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Cancel", MVC.User.AdministerCategories())
</div>
