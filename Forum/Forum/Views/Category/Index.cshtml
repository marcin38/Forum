@{
    ViewBag.Title = "Category/Index";
}

@model IEnumerable<Forum.Models.V_Threads>


<table style="border:1px solid black;">
    <tr>
        <td class="td1">
            Thread name
        </td>
        <td class="td1">
            Author and date of last post
        </td>
        <td class="td1">
            Last post
        </td>
        <td class="td1">
            Posts
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="td1">
                @Html.ActionLink(item.Title, "Index", "Thread", new {id = item.Id }, null)
            </td>
            <td class="td1">
                @Html.DisplayFor(m => item.WhoAddedPost)
            </td>
            <td class="td1">
                @Html.DisplayFor(m => item.LastPost)
            </td>
            <td class="td1">
                @Html.DisplayFor(m => item.PostsNumber)
            </td>
        </tr>
    }

</table>


