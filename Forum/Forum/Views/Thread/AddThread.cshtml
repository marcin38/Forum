@model Forum.ViewModels.ThreadAddThreadViewModel

@{
    ViewBag.Title = "Add Thread";
}

@using (Html.BeginForm())
{
    <div>
        @Html.ValidationSummary()
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.ThreadTitle)
        </div>
        <div class="col-md-12">
            @Html.TextAreaFor(m => m.PostContent, new { @class = "col-md-12 disable-max-width-setting", rows = "20" })
        </div>
            @Html.HiddenFor(m => m.CategoryId, new { @Value = ViewBag.CategoryId })
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-block btn-success" value="Submit" />
        </div>
    </div>

}

@Html.ActionLink("Cancel", "Index", "Category", new { id = ViewBag.CategoryId }, null)

